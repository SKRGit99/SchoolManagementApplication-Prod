@model IEnumerable<SchoolManagementApplicationDAL.Model.StudentInfoADO>

@{
    ViewData["Title"] = "ABC International School";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Welcome to ABC International School
            </h1>
            <p class="lead">
                Select an Student to see the Student details.
            </p>
            <table class="table">
                <tr>
                    <td>Select Student Name</td>
                    <td>
                        @Html.DropDownList("studentList", @ViewBag.studentList, "-- Select Student Name --", new { @class = "form-control" })
                    </td>
                </tr>
            </table>
            <div>
                <button type="submit" class="btn btn-primary" data-bs-toggle="dropdown" style="width:100%" id="btnSubmitRegId">Search</button>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <img src="~/pexels-photo-57690.jpeg" width="250" />
        </div>
    </div>
</div>



<table class="table table-striped table-bordered table-hover align-middle text-center" style="margin-left:50px; margin-top:20px;margin-right:50px; width:fit-content" id="selectedStudentDetailsTable">
    <thead>
        <tr>
            <th>student_registration_Id</th>
            <th>student_name</th>
            <th>roll_number</th>
            <th>mobile_number</th>
            <th>student_class_details</th>
            <th>student_section_details</th>
            <th>student_address</th>
            <th>guardian_name</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#btnSubmitRegId").click(function () {
            var selectedValue = $("#studentList").val();
              var tbody = $('#selectedStudentDetailsTable tbody');
                    tbody.empty();
            // Validate selection
            if (!selectedValue) {
                alert("Please select a value first.");
                return;
            }

            // Send via AJAX
            $.ajax({
                url: '@Url.Action("GetStudentDetailsByRegistrationId", "Admin")', // Controller action
                type: 'POST',
                data: { value: selectedValue },
                success: function (response) {
                       if (response.length > 0) {
                           debugger;
                                $.each(response, function (i, item) {
                                    tbody.append('<tr><td>' + item.student_registration_Id + '</td><td>' + item.student_name + '</td><td>' + item.roll_number + '</td><td>' + item.mobile_number + '</td><td>' + item.student_class + '</td><td>' + item.student_section_Id + '</td><td>' + item.student_address + '</td><td>' + item.guardian_name + '</td></tr>');
                                });
                            } else {
                                tbody.append('<tr><td colspan="3">No Student found</td></tr>');
                            }
         
                },
                error: function (xhr, status, error) {
                    console.error("Error: " + error);
                    alert("Something went wrong.");
                }
            });

          
        });
    });


</script>