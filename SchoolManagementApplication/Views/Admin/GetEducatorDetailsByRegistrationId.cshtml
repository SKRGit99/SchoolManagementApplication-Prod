@model IEnumerable<SchoolManagementApplicationDAL.Model.EducatorDetailsADO>

@{
    ViewData["Title"] = "ABC International School";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Welcome to ABC International School
            </h1>
            <p class="lead">
                Select an Educator to see the Student details.
            </p>
            <table class="table">
                <tr>
                    <td>Select Educator Name</td>
                    <td>
                        @Html.DropDownList("EducatorList", @ViewBag.EducatorList, "-- Select Educator Name --", new { @class = "form-control" })
                    </td>
                </tr>
            </table>
            <div>
                <button type="submit" class="btn btn-primary" data-bs-toggle="dropdown" style="width:100%" id="btnSubmitEduRegId">Search</button>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <img src="~/pexels-photo-57690.jpeg" width="250" />
        </div>
    </div>
</div>



<table class="table table-striped table-bordered table-hover align-middle text-center" style="margin-left:50px; margin-top:20px;margin-right:50px; width:fit-content" id="selectedEducatorDetailsTable">
    <thead>
        <tr>
            <th>Educator_registration_Id</th>
            <th>Educator_name</th>
            <th>Educator_Class</th>
            <th>Educator_Section</th>
            <th>Educator_Subject</th>
            <th>educator_mobile_number</th>
            <th>educator_address</th>
        
        </tr>
    </thead>
    <tbody></tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#btnSubmitEduRegId").click(function () {
            var selectedValue = $("#EducatorList").val();
              var tbody = $('#selectedEducatorDetailsTable tbody');
                    tbody.empty();
            // Validate selection
            if (!selectedValue) {
                alert("Please select a value first.");
                return;
            }

            // Send via AJAX
            $.ajax({
                url: '@Url.Action("GetEducatorDetailsByRegistrationId", "Admin")', // Controller action
                type: 'POST',
                data: { value: selectedValue },
                success: function (response) {
                       if (response.length > 0) {
                           debugger;
                                $.each(response, function (i, item) {
                                    tbody.append('<tr><td>' + item.educator_registration_Id + '</td><td>' + item.educator_name + '</td><td>' + item.class_assigned + '</td><td>' + item.section_assigned + '</td><td>' + item.subject_assigned + '</td><td>' + item.mobile_number + '</td><td>' + item.address + '</td></tr>');
                                });
                            } else {
                                tbody.append('<tr><td colspan="3">No Educator found</td></tr>');
                            }

                },
                error: function (xhr, status, error) {
                    console.error("Error: " + error);
                    alert("Something went wrong.");
                }
            });


        });
    });


</script>
